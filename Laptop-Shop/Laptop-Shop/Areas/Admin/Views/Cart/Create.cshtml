@model Laptop_Shop.Models.Cart

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm("Create","Cart",FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
